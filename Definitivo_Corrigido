  terra::ext(-86, -59, 18, 25),  # Greater Antilles + Bahamas
  terra::ext(-73, -59, 10, 18)   # Lesser Antilles
)

# Function: set to NA everything inside the box (keep outside)
drop_box <- function(mask_spat, ex) {
  poly <- terra::as.polygons(ex)           # SpatVector polygon
  terra::crs(poly) <- terra::crs(mask_spat)
  terra::mask(mask_spat, poly, inverse = TRUE)  # keep outside polygon
}

for (ex in ant_boxes) {
  m <- drop_box(m, ex)
}

# Normalize: keep >0, drop <=0
m[m <= 0] <- NA

# Apply mask to ensemble
ens_masked <- terra::mask(ensemble_raster_single, m)

if (!terra::hasValues(ens_masked)) {
  warning("Masked ensemble has no values after Antilles removal. Keeping original ensemble.")
} else {
  ensemble_raster_single <- ens_masked
  message("✔ Mask + Antilles removal applied to ensemble_raster_single.")
}

terra::writeRaster(
  ensemble_raster_single,
  filename = file.path(output_dir, "ensemble_suitability_MASKED_noAntilles_testeXX.tif"),
  overwrite = TRUE
)

# Safety check: if mask kills all values, keep original but warn
if (!terra::hasValues(ens_masked)) {
  warning("Masked ensemble has no values. Keeping the original ensemble_raster_single. Check mask overlap/values.")
} else {
  ensemble_raster_single <- ens_masked
  message("✔ Mask applied to ensemble_raster_single.")
}

# Save masked ensemble raster (GeoTIFF)
terra::writeRaster(
  ensemble_raster_single,
  filename = file.path(output_dir, "ensemble_suitability_MASKED_teste73.tif"),
  overwrite = TRUE
)

