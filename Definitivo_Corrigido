# --- Function to build binary raster and save (GeoTIFF + PNG)
save_binary_map <- function(cutoff_value, suffix) {

  if (!is.finite(cutoff_value)) {
    warning("Cutoff is NA/invalid for ", suffix, ". Skipping binary map.")
    return(invisible(NULL))
  }

  # Binary: 1 if >= cutoff, 0 otherwise; keep NA where masked
  r_bin <- ens_cont >= cutoff_value
  r_bin <- terra::ifel(is.na(ens_cont), NA, r_bin)  # preserve NA mask
  r_bin <- terra::ifel(r_bin, 1, 0)

  # Save GeoTIFF (real raster)
  tif_out <- file.path(output_dir, paste0("ensemble_binary_", suffix, "_MASKED_teste73.tif"))
  terra::writeRaster(r_bin, tif_out, overwrite = TRUE)

  # Save PNG
  df_bin <- as.data.frame(r_bin, xy = TRUE, na.rm = TRUE)
  colnames(df_bin)[3] <- "Binary"

  p_bin <- ggplot() +
    geom_raster(data = df_bin, aes(x = x, y = y, fill = factor(Binary))) +
    scale_fill_viridis_d(option = "C", name = paste0("Binary (", suffix, ")")) +
    coord_sf(expand = FALSE) +
    theme_minimal() +
    labs(title = paste0("Binary Ensemble (Masked) – ", suffix, " cutoff")) +
    theme(plot.title = element_text(face="bold", hjust=0.5))

  png_out <- file.path(output_dir, paste0("ensemble_binary_", suffix, "_MASKED_teste73.png"))
  ggsave(png_out, plot = p_bin, width = 10, height = 7, units = "in", dpi = 300)

  return(list(r_bin = r_bin, p_bin = p_bin, cutoff = cutoff_value))
}

# Generate binary maps
bin_tss <- save_binary_map(cut_tss, "TSS")
bin_roc <- save_binary_map(cut_roc, "ROC")


