neotrop_shp <- "C:/Users/Administrador/Desktop/Gab/Mod/Preditores/NEOTROPICAL/NEOTROPICAL/neotropico.shp"

# lê shapefile apenas para pegar o extent
neo_v <- terra::vect(neotrop_shp)

# garante CRS compatível com os rasters
# (usamos BIO7 depois como referência)
prep_layer <- function(path, ref = NULL, neo_v) {

  r <- raster::raster(path)

  # reprojeta shapefile para o CRS do raster, se necessário
  neo_use <- neo_v
  crs_r <- terra::crs(terra::rast(r))
  if (!terra::same.crs(neo_use, crs_r)) {
    neo_use <- terra::project(neo_use, crs_r)
  }

  # usa APENAS o bounding box do shapefile
  ext_neo <- raster::extent(as.vector(terra::ext(neo_use)))
  r <- raster::crop(r, ext_neo)

  # padroniza resolução/grade
  if (!is.null(ref)) {
    r <- raster::resample(r, ref, method = "bilinear")
  }

  r
}

# ---- Camadas ambientais ----
BIO7   <- prep_layer(
  "C:/Users/Administrador/Desktop/Gab/Mod/wc2.1_2.5m_bio/wc2.1_2.5m_bio_7.tif",
