ext_america <- raster::extent(-170, -26, -56, 72)

prep_layer <- function(path, ref = NULL) {
  r <- raster::raster(path)
  r <- raster::crop(r, ext_america)
  if (!is.null(ref)) r <- raster::resample(r, ref, method = "bilinear")
  r
}

BIO7  <- prep_layer("C:/Users/Administrador/Desktop/Gab/Mod/wc2.1_2.5m_bio/wc2.1_2.5m_bio_7.tif")
vapor <- prep_layer("C:/Users/Administrador/Desktop/GAB/Mod/meanvaporpressure.tif", BIO7)
wind  <- prep_layer("C:/Users/Administrador/Desktop/GAB/Mod/wind_media_anual.tif", BIO7)
relevo<- prep_layer("C:/Users/Administrador/Desktop/GAB/Mod/output_GMRT.tif", BIO7)

relevo[relevo < 0] <- NA

env <- raster::stack(vapor, wind, relevo, BIO7)
names(env) <- c("Vapor_Pressure","Wind","Elevation","Temperature_Variation")
cat("Layers:", paste(names(env), collapse = ", "), "\n")

# checkpoints das layers
raster::writeRaster(vapor, file.path(output_dir, "Vapor_Pressure.tif"), overwrite = TRUE)
raster::writeRaster(wind,  file.path(output_dir, "Wind.tif"), overwrite = TRUE)
raster::writeRaster(relevo,file.path(output_dir, "Elevation.tif"), overwrite = TRUE)
raster::writeRaster(BIO7,  file.path(output_dir, "BIO7.tif"), overwrite = TRUE)

# ======================================================
# 4) BIOMOD_FormatingData (with PA) + MASK via env
#     (raster-only, compatible with older biomod2)
#     + Remove Antilles (2 boxes)
# ======================================================

mask_path <- "C:/Users/Administrador/Desktop/Gab/Mod/mask_america_extent.tif"

# env must be RasterStack/RasterBrick (from raster package)
stopifnot(inherits(env, c("RasterStack", "RasterBrick")))

# --- Reference grid (use first predictor as reference) ---
ref_r <- env[[1]]

# --- Read mask as RasterLayer ---
mask_r <- raster::raster(mask_path)

# (A) Match CRS
if (!raster::compareCRS(mask_r, ref_r)) {
  message("Reprojecting mask to env CRS ...")
  mask_r <- raster::projectRaster(mask_r, ref_r, method = "ngb")
}

# (B) Match grid (resolution/origin) and extent
mask_r <- raster::resample(mask_r, ref_r, method = "ngb")
mask_r <- raster::crop(mask_r, raster::extent(ref_r))

# (C) Normalize mask values: keep >0 as 1, drop <=0 as NA
mask_r[mask_r <= 0] <- NA
mask_r[mask_r >  0] <- 1

# ------------------------------------------------------
# Remove Antilles (keep other islands)
# Burn two boxes into NA on the same grid.
# ------------------------------------------------------

ant_boxes <- list(
  raster::extent(-86, -59, 18, 25),  # Greater Antilles + Bahamas (approx.)
  raster::extent(-73, -59, 10, 18)   # Lesser Antilles arc (approx.)
)

# Helper to build SpatialPolygons from Extent (without CRS),
# then assign proj4string safely as character.
make_extent_poly <- function(ex, proj4_str) {
  coords <- matrix(c(
    ex@xmin, ex@ymin,
    ex@xmax, ex@ymin,
    ex@xmax, ex@ymax,
    ex@xmin, ex@ymax,
    ex@xmin, ex@ymin
  ), ncol = 2, byrow = TRUE)

  p <- sp::SpatialPolygons(list(sp::Polygons(list(sp::Polygon(coords)), ID = "1")))
  sp::proj4string(p) <- sp::CRS(proj4_str)
  p
}

# Get PROJ.4 string (character) from mask CRS
# (works even when raster::crs returns S4 CRS object)
mask_proj4 <- as.character(raster::crs(mask_r))
if (is.na(mask_proj4) || mask_proj4 == "") {
  stop("Mask CRS is empty/NA. Define CRS for mask_r before continuing.")
}

ant_polys <- lapply(ant_boxes, make_extent_poly, proj4_str = mask_proj4)

# Combine polygons (base sp method)
ant_poly_all <- ant_polys[[1]]
if (length(ant_polys) > 1) {
  for (i in 2:length(ant_polys)) ant_poly_all <- raster::bind(ant_poly_all, ant_polys[[i]])
}

# Rasterize polygons onto mask_r template
ant_r <- raster::raster(mask_r)
ant_r <- raster::rasterize(ant_poly_all, ant_r, field = 1, background = 0)

# Burn (erase) Antilles: set mask to NA where ant_r == 1
mask_r[ant_r == 1] <- NA

# Optional checkpoint
raster::writeRaster(mask_r, file.path(output_dir, "MASK_noAntilles.tif"),
                    overwrite = TRUE)

# ------------------------------------------------------
# Apply mask to predictors (layer-by-layer, robust)
# ------------------------------------------------------
env_masked <- raster::stack(lapply(1:raster::nlayers(env), function(i) {
  raster::mask(env[[i]], mask_r)
}))
names(env_masked) <- names(env)

stopifnot(inherits(env_masked, "RasterStack"))
stopifnot(raster::nlayers(env_masked) == raster::nlayers(env))

# Optional checkpoint: save masked predictors
for (nm in names(env_masked)) {
  raster::writeRaster(env_masked[[nm]],
                      filename = file.path(output_dir, paste0("ENV_MASKED_", nm, ".tif")),
                      overwrite = TRUE)
}

# ------------------------------------------------------
# BIOMOD_FormatingData
# Older biomod2 expects filter.raster logical; pass TRUE
# and provide env already masked.
# ------------------------------------------------------
biomod_data <- BIOMOD_FormatingData(
  resp.var = resp.var,
  expl.var = env_masked,
  resp.xy  = coords,
  PA.nb.rep = 10,
  PA.nb.absences = 600,
  PA.strategy = "random",
  PA.dist.min = 20000,
  PA.dist.max = 150000,
  filter.raster = TRUE,
  resp.name = "Vampyrum.spectrum"
)

saveRDS(biomod_data, file.path(output_dir, "biomod_data_teste70.rds"))
cat("✔ BIOMOD_FormatingData done. Mask applied (no Antilles). \n")

# ======================================================
# 5) Modelagem
# ======================================================
myOptions <- BIOMOD_ModelingOptions(
  GBM = list(n.trees = 2000, interaction.depth = 2, shrinkage = 0.005,
             bag.fraction = 0.5, n.minobsinnode = 10),
  GLM = list(type = "simple", test = "BIC"),
  GAM = list(k = 3)
)

models <- BIOMOD_Modeling(
  biomod_data,
  models = c("GLM","GAM","GBM"),
  bm.options = myOptions,
  CV.strategy = "block",
  CV.nb.rep = 5,
  prevalence = 0.5,
  metric.eval = c("TSS","ROC"),
  var.import = 3
)

saveRDS(models, file.path(output_dir, "models_teste73.rds"))

# ======================================================
# 6) Ensemble
# ======================================================
ensemble <- BIOMOD_EnsembleModeling(
  bm.mod = models,
  models.chosen = "all",
  em.by = "all",
  em.algo = c("EMmean"),
  metric.select = c("TSS","ROC"),
  metric.select.thresh = c(0.5, 0.7),
  var.import = 3
)

saveRDS(ensemble, file.path(output_dir, "ensemble_teste73.rds"))

# ======================================================
# 7) Ensemble Forecasting (RASTER ROBUSTO)
# ======================================================
ensemble_proj <- BIOMOD_EnsembleForecasting(
  bm.em = ensemble,
  proj.name = "current_teste73",
  new.env = env
)
saveRDS(ensemble_proj, file.path(output_dir, "ensemble_proj_teste73.rds"))

pred_obj <- get_predictions(ensemble_proj)

# 1) tentativa direta
ensemble_raster_single <- tryCatch(terra::rast(pred_obj)[[1]], error = function(e) NULL)

# 2) fallback via Raster*
if (is.null(ensemble_raster_single) || !terra::hasValues(ensemble_raster_single)) {
  rs <- tryCatch(raster::stack(pred_obj), error = function(e) NULL)
  if (!is.null(rs)) ensemble_raster_single <- terra::rast(rs)[[1]]
}

# 3) checagem final
if (is.null(ensemble_raster_single) || !terra::hasValues(ensemble_raster_single)) {
  stop("Não consegui obter raster do ensemble com valores. Veja class/str de get_predictions(ensemble_proj).")
}

terra::writeRaster(
  ensemble_raster_single,
  file.path(output_dir, "ensemble_suitability_teste73.tif"),
  overwrite = TRUE
)

# ======================================================
# 7B) APPLY MASK TO ENSEMBLE RASTER (BLOCK 3)
#     (updates ensemble_raster_single)
# ======================================================
# ------------------------------------------------------
# REMOVE ANTILLES (TERRA) - ROBUST (no rasterize, no in-place)
# Put inside BLOCK 7B, AFTER:
#   m <- terra::rast(mask_path)
#   m <- terra::project/resample(...)  (alignment to ensemble)
# ------------------------------------------------------

# IMPORTANT: re-read mask fresh (avoid invalid pointers)
m <- terra::rast(mask_path)

# Guarantee CRS + grid alignment to ensemble
if (!terra::same.crs(m, ensemble_raster_single)) {
  m <- terra::project(m, ensemble_raster_single, method = "near")
}
m <- terra::resample(m, ensemble_raster_single, method = "near")

# Two Antilles boxes (adjust if needed)
