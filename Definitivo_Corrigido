# Read ensemble evaluations (EMmean)
ev_ens <- get_evaluations(ensemble)

# Helper: get cutoff for EMmean filtered by TSS or ROC
get_ens_cutoff <- function(ev, by_metric = c("TSS","ROC")) {
  by_metric <- match.arg(by_metric)

  # In your structure, "filtered.by" indicates which metric was used for model selection
  # and metric.eval indicates the metric of the evaluation row.
  # The cutoff is stored in the same row.
  # We want the row where algo == "EMmean" and metric.eval == by_metric.
  # Prefer the matching filtered.by too (more consistent).
  df <- ev %>%
    dplyr::filter(algo == "EMmean", metric.eval == by_metric)

  # Try to prioritize rows where filtered.by == by_metric (if exists)
  if ("filtered.by" %in% names(df)) {
    df2 <- df %>% dplyr::filter(filtered.by == by_metric)
    if (nrow(df2) > 0) df <- df2
  }

  if (!("cutoff" %in% names(df)) || nrow(df) == 0) return(NA_real_)
  as.numeric(df$cutoff[1])
}

cut_tss <- get_ens_cutoff(ev_ens, "TSS")
cut_roc <- get_ens_cutoff(ev_ens, "ROC")

cat("Ensemble cutoff (TSS):", cut_tss, "\n")
cat("Ensemble cutoff (ROC):", cut_roc, "\n")

# Ensure we use the MASKED continuous ensemble raster already produced
