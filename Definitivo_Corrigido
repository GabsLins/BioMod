# ======================================================
# 4) BIOMOD_FormatingData (with PA)
# ======================================================
biomod_data <- BIOMOD_FormatingData(
  resp.var = resp.var,
  expl.var = env,
  resp.xy  = coords,
  PA.nb.rep = 10,
  PA.nb.absences = 600,
  PA.strategy = "random",
  PA.dist.min = 20000,
  PA.dist.max = 150000,
  filter.raster = TRUE,
  resp.name = "Vampyrum.spectrum"
)

saveRDS(biomod_data, file.path(output_dir, "biomod_data_teste87.rds"))
cat("✔ BIOMOD_FormatingData done.\n")

# ======================================================
# 5) Modeling
# ======================================================
myOptions <- BIOMOD_ModelingOptions(
  RF  = list(n.trees = 500, mtry = 2, nodesize = 20, maxnodes = 20),
  GBM = list(n.trees = 2000, interaction.depth = 2, shrinkage = 0.005,
             bag.fraction = 0.5, n.minobsinnode = 10),
  MAXENT = list(betamultiplier = 3, features = "lq"),
  GLM = list(type = "simple", test = "BIC"),
  GAM = list(k = 3)
)

models <- BIOMOD_Modeling(
  biomod_data,
  models = c("GLM","GAM","GBM","RF","MAXENT"),
  bm.options = myOptions,
  CV.strategy = "block",
  CV.nb.rep = 5,
  prevalence = 0.5,
  metric.eval = c("TSS","ROC"),
  var.import = 3
)

saveRDS(models, file.path(output_dir, "models_teste87.rds"))

# ======================================================
# 6) Ensemble
# ======================================================
ensemble <- BIOMOD_EnsembleModeling(
  bm.mod = models,
  models.chosen = "all",
  em.by = "all",
  em.algo = c("EMmean"),
  metric.select = c("TSS","ROC"),
  metric.select.thresh = c(0.5, 0.7),
  var.import = 3
)

saveRDS(ensemble, file.path(output_dir, "ensemble_teste87.rds"))

# ======================================================
# 7) Ensemble Forecasting
# ======================================================
ensemble_proj <- BIOMOD_EnsembleForecasting(
  bm.em = ensemble,
  proj.name = "current_teste87",
  new.env = env
)
saveRDS(ensemble_proj, file.path(output_dir, "ensemble_proj_teste87.rds"))

pred_obj <- get_predictions(ensemble_proj)

# Try terra directly
ensemble_raster_single <- tryCatch(terra::rast(pred_obj)[[1]], error = function(e) NULL)

# Fallback via raster::stack
if (is.null(ensemble_raster_single) || !terra::hasValues(ensemble_raster_single)) {
  rs <- tryCatch(raster::stack(pred_obj), error = function(e) NULL)
  if (!is.null(rs)) ensemble_raster_single <- terra::rast(rs)[[1]]
}

if (is.null(ensemble_raster_single) || !terra::hasValues(ensemble_raster_single)) {
  stop("Could not obtain ensemble raster with values from BIOMOD_EnsembleForecasting.")
}

terra::writeRaster(
  ensemble_raster_single,
  file.path(output_dir, "ensemble_suitability_teste87.tif"),
  overwrite = TRUE
)

# ======================================================
# 8B) Ensemble (0-1) + Binary (TSS cutoff)
#     - Gera: ensemble contínuo reescalonado (0-1)
#     - Gera: ensemble binário com cutoff do TSS (mais conservador)
# ======================================================

ev_ens <- get_evaluations(ensemble)

get_ens_cutoff <- function(ev, metric = c("TSS","ROC")) {
  metric <- match.arg(metric)
  df <- as.data.frame(ev) %>% dplyr::filter(algo == "EMmean", metric.eval == metric)
  if ("filtered.by" %in% names(df)) {
    df2 <- df %>% dplyr::filter(filtered.by == metric)
    if (nrow(df2) > 0) df <- df2
  }
  if (!("cutoff" %in% names(df)) || nrow(df) == 0) return(NA_real_)
  as.numeric(df$cutoff[1])
}

cut_tss_raw <- get_ens_cutoff(ev_ens, "TSS")
cat("Ensemble cutoff (TSS) [raw scale]:", cut_tss_raw, "\n")

# --- Normaliza o ensemble para 0-1 (preserva NA) ---
mm <- terra::global(ensemble_raster_single, fun = c("min","max"), na.rm = TRUE)
mn <- as.numeric(mm[1,1])
mx <- as.numeric(mm[1,2])

if (!is.finite(mn) || !is.finite(mx) || mx <= mn) {
  stop("Não foi possível calcular min/max para normalização (0-1). Verifique o raster do ensemble.")
}

ensemble_01 <- (ensemble_raster_single - mn) / (mx - mn)

terra::writeRaster(
  ensemble_01,
  file.path(output_dir, "ensemble_suitability_0_1_teste87.tif"),
  overwrite = TRUE
)

# --- Cutoff TSS também reescalonado para 0-1 ---
cut_tss_01 <- if (is.finite(cut_tss_raw)) (cut_tss_raw - mn) / (mx - mn) else NA_real_
cat("Ensemble cutoff (TSS) [0-1]:", cut_tss_01, "\n")

# --- Binário (TSS) sobre o ensemble 0-1 ---
if (is.finite(cut_tss_01)) {
  ensemble_bin_tss <- terra::ifel(
    is.na(ensemble_01),
    NA,
    terra::ifel(ensemble_01 >= cut_tss_01, 1, 0)
  )

  terra::writeRaster(
    ensemble_bin_tss,
    file.path(output_dir, "ensemble_binary_TSS_teste87.tif"),
    overwrite = TRUE
  )

  # PNG rápido (opcional)
  df_bin <- as.data.frame(ensemble_bin_tss, xy = TRUE, na.rm = TRUE)
  colnames(df_bin)[3] <- "Binary"

  p_bin <- ggplot() +
    geom_raster(data = df_bin, aes(x = x, y = y, fill = factor(Binary))) +
    scale_fill_viridis_d(option = "C", name = "Binary (TSS)") +
    coord_sf(expand = FALSE) +
    theme_minimal() +
    labs(title = "Binary Ensemble – TSS cutoff (0-1)") +
    theme(plot.title = element_text(face = "bold", hjust = 0.5))

  ggsave(
    file.path(output_dir, "ensemble_binary_TSS_teste87.png"),
    plot = p_bin, width = 10, height = 7, units = "in", dpi = 300
  )

} else {
  warning("Cutoff TSS não encontrado no get_evaluations(ensemble). Binário TSS não será gerado.")
}

